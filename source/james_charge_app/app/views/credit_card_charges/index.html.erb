<% if @credit_card_charges.failed.size > 0 %>
  <h1> Failed Charges </h1>
  <table>
    <thead>
      <tr>
        <th>Customer</th>
        <th>Amount</th>
        <th>Failed</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @credit_card_charges.failed.each do |credit_card_charge_failed| %>
        <tr class="failed">
          <td><%= credit_card_charge_failed.getCustomerName %></td>
          <td><%= credit_card_charge_failed.amount %></td>
          <td><%= credit_card_charge_failed.created %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if @credit_card_charges.disputed.size > 0 %>
  <h1> Disputed Charges </h1>
  <table>
    <thead>
      <tr>
        <th>Customer</th>
        <th>Amount</th>
        <th>Disputed</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @credit_card_charges.disputed.each do |credit_card_charge_disputed| %>
        <tr class="disputed">
          <td><%= credit_card_charge_disputed.getCustomerName %></td>
          <td><%= credit_card_charge_disputed.amount %></td>
          <td><%= credit_card_charge_disputed.created %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if @credit_card_charges.successful.size > 0 %>
  <h1> Successful Charges </h1>
  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Created</th>
        <th>Paid</th>
        <th>Amount</th>
        <th>Currency</th>
        <th>Refunded</th>
        <th>Customer</th>
        <th>Disputed</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @credit_card_charges.successful.each do |credit_card_charge| %>
        <tr>
          <td><%= credit_card_charge.id %></td>
          <td><%= credit_card_charge.created %></td>
          <td><%= credit_card_charge.paid %></td>
          <td><%= credit_card_charge.amount %></td>
          <td><%= credit_card_charge.currency %></td>
          <td><%= credit_card_charge.refunded %></td>
          <td><%= credit_card_charge.customer_id %></td>
          <td><%= credit_card_charge.disputed %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

